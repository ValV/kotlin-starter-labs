<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="240" prefWidth="480" xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <Label contentDisplay="RIGHT" text="%productA">
            <graphic>
               <TextArea fx:id="editProductA" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="80.0" />
            </graphic></Label>
         <Label contentDisplay="RIGHT" text="%productB">
            <graphic>
               <TextArea fx:id="editProductB" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="80.0" />
            </graphic></Label>
      </VBox>
   </center>
   <bottom>
      <Label contentDisplay="RIGHT" text="%productTotal" BorderPane.alignment="CENTER">
         <graphic>
            <TextArea fx:id="editTotal" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="80.0" />
         </graphic></Label>
   </bottom>
   <padding>
      <Insets bottom="8.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</BorderPane>
